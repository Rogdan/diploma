<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/photo_iv"
        android:src="@drawable/user"
        android:layout_margin="@dimen/pad_12"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <LinearLayout
        android:layout_toEndOf="@+id/photo_iv"
        android:layout_toStartOf="@+id/open_iv"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_tv"
            style="@style/TitleTS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/position_tv"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/pad_4"
            style="@style/SubtitleTS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/open_iv"
        android:src="@drawable/arrow_right"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingEnd="@dimen/pad_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_below="@+id/photo_iv"
        style="@style/DividerStyle"/>
</RelativeLayout>