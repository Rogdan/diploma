<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style parent="Theme.AppCompat.NoActionBar" name="SplashTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TitleTS">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubtitleTS">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_alpha_75</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:alpha">0.1</item>
    </style>

    <style name="LinkTS">
        <item name="android:textColor">@color/blue_link</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="White28">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MediumWhiteCenter18">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RoundDarkButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_dark_button_switcher</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Black16">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SwitcherStyle">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/switcher_selector</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <style name="Black24">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SwitcherTheme" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/dark_mint_green</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/pale_grey_four</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/grey</item>
    </style>

    <style name="GreenTeal16sp">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/green_teal</item>
    </style>

    <style name="MediumBlack16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MediumGreenRight14">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/shamrock_green</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
